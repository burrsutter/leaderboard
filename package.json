{
  "author": "Joshua Wilson",
  "license": "Apache-2.0",
  "name": "Scoreboard",
  "version": "0.0.1",
  "scripts": {
    "build-sass": "node-sass styles/styles.scss styles/styles.css",
    "build-css": "postcss --config options.json",
    "build-js": "browserify js/main.js -o build/bundle.js -dv",
    "build-min-js": "browserify js/main.js | uglifyjs -o build/main.min.js",
    "build-min-sass": "node-sass styles/styles.scss | cleancss -o build/styles.min.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-ify": "watchify js/main.js -o build/bundle.js -d",
    "watch-js": "nodemon -e js -w public/js -x 'npm run build-js'",
    "watch-sass": "nodemon -e scss -w public/sass -x 'npm run build-sass'",
    "build": "npm run build-js & npm run build-sass",
    "watch": "npm run watch-js & npm run watch-sass",
    "start": ""
  },
  "Dependencies": {

  },
  "devDependencies": {
    "autoprefixer": "latest",
    "browserify": "13.x",
    "node-sass": "latest",
    "postcss-cachify": "latest",
    "postcss-cli": "2.x",
    "uglifyjs": "latest",
    "clean-css": "latest",
    "watchify": "3.x"
  }
}